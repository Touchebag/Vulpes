{
    "templates": {
        "airborne": {
            "properties": {
                "touching_ground": false
            },
            "physics_constants": {
                "x_acceleration": 1.5,
                "x_friction": 0.93
            }
        },
        "dashing": {
            "properties": {
                "touching_ground": false,
                "movement_locked_x": true,
                "movement_locked_y": true
            },
            "physics_constants": {
                "x_friction": 0.8
            }
        },
        "can_jump": {
            "script": [
                "on_enter if (grt (get 'jumps_left') 0) then (enable_action jump)",
                "on_exit disable_action jump"
            ]
        },
        "can_wall_jump": {
            "physics_constants": {
                "jump_impulse_x": -50.0,
                "jump_impulse_y": -45.0
            },
            "script": [
                "on_enter if (grt (get 'jumps_left') 0) then (enable_action jump)",
                "on_exit disable_action jump"
            ]
        },
        "can_dash": {
            "script": [
                "on_enter if (and (flag 'Action.dash') (grt (get 'dashes_left') 0)) then (enable_action dash)",
                "on_exit disable_action dash"
            ]
        },
        "can_attack": {
            "script": [
                "on_enter if (flag 'Action.attack1') then (enable_action attack1)",
                "on_exit disable_action attack1"
            ]
        },
        "can_interact": {
            "script": [
                "on_enter enable_action interact",
                "on_exit disable_action interact"
            ]
        },
        "can_air_dive": {
            "next_states": [
                {"event": "action_air_dive", "state": "air_dive_start"}
            ]
        },
        "reset_jumps_and_dashes": {
            "script": [
                "on_enter set 'jumps_left' 2",
                "on_enter set 'dashes_left' 1"
            ]
        },
        "wall_stick": {
            "script": [
                "move this 0.01 0.0"
            ],
            "physics_constants": {
                "gravity": 0.0,
                "y_acceleration": 1.5,
                "y_friction": 0.93
            }
        },
        "ledge_climb_sensors": {
            "collideables": [
                {
                    "type": "sensor",
                    "name": "ledge_climb_top",
                    "target": "static",
                    "width": 100,
                    "height": 200,
                    "offset": {
                        "x": 50,
                        "y": -200
                    }
                },
                {
                    "type": "sensor",
                    "name": "ledge_climb_bottom",
                    "target": "static",
                    "width": 30,
                    "height": 150,
                    "offset": {
                        "x": 40,
                        "y": 0
                    }
                }
            ],
            "script": [
                "if (and (not (sensor 'ledge_climb_top')) (sensor 'ledge_climb_bottom')) then (set_position this (position_x this) (sub (collision_history 'ledge_climb_bottom' 0 top_edge) 100))"
            ],
            "next_states": [
                {"event": "ledge_climb", "state": "ledge_climb"}
            ]
        }
    },
    "states": {
        "main": {
            "next_states": [
                {"event": "start", "state": "idle"}
            ],
            "script": [
                "on_exit disable_action jump",
                "on_exit disable_action dash",
                "on_exit disable_action attack1"
            ],
            "animation": "idle"
        },
        "idle": {
            "next_states": [
                {"event": "action_attack1", "state": "attack"},
                {"event": "action_attack2", "state": "shoot"},
                {"event": "airborne", "state": "falling"},
                {"event": "damaged", "state": "taking_damage"},
                {"event": "dashing", "state": "dash_startup"},
                {"event": "jumping", "state": "jump_start"},
                {"event": "moving_x", "state": "running"}
            ],
            "templates": [
                "reset_jumps_and_dashes",
                "can_jump",
                "can_interact",
                "can_dash",
                "can_attack"
            ],
            "animation": "idle"
        },
        "running": {
            "next_states": [
                {"event": "action_attack1", "state": "attack"},
                {"event": "action_attack2", "state": "shoot"},
                {"event": "airborne", "state": "falling"},
                {"event": "damaged", "state": "taking_damage"},
                {"event": "dashing", "state": "dash_startup"},
                {"event": "jumping", "state": "jump_start"},
